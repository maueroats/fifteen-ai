{
  "name": "Python GUI",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/uv:1": {}
  },

  // 1. Map the noVNC port so you can see the GUI in your browser
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC Desktop",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  // 2. Configure the IDE to use the uv-generated virtual environment
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvInSelectedTerminal": true,
        "python.testing.pytestEnabled": true
      },
      "extensions": [
       // "ms-python.python",
       // "charliermarsh.ruff",
       // "tamasfe.even-better-toml"
      ]
    }
  },
  // 3. Ensure dependencies are synced every time the container is built/started
  "postCreateCommand": "uv sync",
  "postStartCommand": [
    "mkdir -p ~/.vnc",
    "chmod 700 ~/.vnc",
    "x11vnc -storepasswd \"${VNC_PASSWORD}\" ~/.vnc/passwd",
    "nohup /usr/local/bin/entrypoint.sh"
  ]
  
  // 4. Run as root (or match your Dockerfile user) to ensure Xvfb has permissions
  // "remoteUser": "vscode",
  // "containerUser": "vscode"

}
